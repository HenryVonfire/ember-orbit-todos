<h1>Todos</h1>

{{todo-creator placeholder="What needs to be done?" action='createToDo'}}

<div id="stats">
    <button {{action 'clearCompletedTodos'}}>
        Clear Completed Todos
    </button>

  {{remaining}} remaining
</div>

<label>
  {{input type="checkbox" checked=allAreDone disabled=isEmpty}}
    Mark All as Done
</label>

<ul>
  {{#each model as |todo|}}
      <li {{bind-attr class="isDone"}}>
          <label>
            {{input type="checkbox" checked=todo.isDone}}
            {{todo.title}}
          </label>
      </li>
  {{/each}}
</ul>